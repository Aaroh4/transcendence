{
    "scripts": {
        "build": "npx tsc --project ./tsconfig.json && npx tailwindcss -i ./src/input.css -o ./dist/output.css && cp ./src/index.html ./dist/index.html",
        "watch": "npx tsc --project ./tsconfig.json --watch & npx tailwindcss -i ./src/input.css -o ./dist/output.css --watch"
    },
	"dependencies": {
		"@tailwindcss/cli": "^4.0.8",
		"socket.io-client": "^4.6.1"
	},
	"devDependencies": {
		"tailwindcss": "^4.0.8",
		"typescript": "^5.8.2"
	}
}
